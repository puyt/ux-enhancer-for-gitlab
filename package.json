{
  "name": "ux-enhancer-for-gitlab",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:chrome": "npm run build && cd dist && zip -rq ../chrome-dist.zip * && cd ..",
    "build:firefox": "npm run build && mv dist/manifest_firefox.json dist/manifest.json && cd dist && zip -rq ../firefox-dist.zip * && cd ../src && zip -rq ../src.zip * && cd ..",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@mdi/js": "^7.3.67",
    "@types/chrome": "^0.0.328",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vueuse/core": "^13.4.0",
    "lodash-es": "^4.17.21",
    "mitt": "^3.0.1",
    "pinia": "^3.0.3",
    "sass": "^1.69.5",
    "showdown": "^2.1.0",
    "vite-plugin-copy": "^0.1.6",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/showdown": "^2.0.6",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.33",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vue-tsc": "^3.0.5"
  }
}
